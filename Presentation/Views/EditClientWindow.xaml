<Window x:Class="ClientWpf.Views.EditClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать клиента" Height="250" Width="400"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Наименование -->
        <TextBlock Text="Наименование:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Margin="120,0,0,0"
                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- ИНН -->
        <TextBlock Grid.Row="1" Text="ИНН:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Margin="120,0,0,0"
                 Text="{Binding Inn, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Примечание -->
        <TextBlock Grid.Row="2" Text="Примечание:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Margin="120,0,0,0"
                 Text="{Binding Note, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Сфера деятельности -->
        <TextBlock Grid.Row="3" Text="Сфера деятельности:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="3" Margin="120,0,0,0"
                  ItemsSource="{Binding BusinessAreas}"
                  SelectedItem="{Binding SelectedBusinessArea}"
                  DisplayMemberPath="Name"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="80" Margin="5" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
